<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context=".auth.ValidationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:paddingTop="55dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37dp"
            android:src="@drawable/ic_arrow_back"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_validation"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:text="OTP Code"
            android:textSize="24sp"
            android:textColor="@color/black_title"
            android:fontFamily="@font/notosans_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="20dp"
            android:lineSpacingExtra="3dp"
            android:textAlignment="center"
            android:text="@string/subtitle_validation"
            android:textSize="12sp"
            android:textColor="@color/black_form_title"
            android:fontFamily="@font/notosans_regular"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etOTP1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/bg_et"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black_form_title"
                android:fontFamily="@font/notosans_regular"
                android:inputType="number"/>

            <EditText
                android:id="@+id/etOTP2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/bg_et"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black_form_title"
                android:fontFamily="@font/notosans_regular"
                android:inputType="number"/>

            <EditText
                android:id="@+id/etOTP3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/bg_et"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black_form_title"
                android:fontFamily="@font/notosans_regular"
                android:inputType="number"/>

            <EditText
                android:id="@+id/etOTP4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/bg_et"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black_form_title"
                android:fontFamily="@font/notosans_regular"
                android:inputType="number"/>

            <EditText
                android:id="@+id/etOTP5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_et"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black_form_title"
                android:fontFamily="@font/notosans_regular"
                android:inputType="number"/>

        </LinearLayout>

        <TextView
            android:id="@+id/linkResendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="28dp"
            android:text="Resend the code"
            android:textSize="12sp"
            android:textColor="@color/grey_link"
            android:fontFamily="@font/notosans_regular"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_btn"
            android:text="Send"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/notosans_regular"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>