<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context=".auth.PasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:paddingTop="55dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37dp"
            android:src="@drawable/ic_arrow_back"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_password"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:text="Password"
            android:textSize="24sp"
            android:textColor="@color/black_title"
            android:fontFamily="@font/notosans_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="20dp"
            android:lineSpacingExtra="3dp"
            android:textAlignment="center"
            android:text="@string/subtitle_password"
            android:textSize="12sp"
            android:textColor="@color/black_form_title"
            android:fontFamily="@font/notosans_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="14sp"
            android:textColor="@color/black_form_title"
            android:fontFamily="@font/notosans_regular"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:helperText=""
            app:helperTextTextColor="@color/red_failed"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/grey_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="14dp"
                android:background="@drawable/bg_et"
                android:maxLines="1"
                android:hint="Min. 8 characters"
                android:textColorHint="@color/grey_hint"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:textColor="@color/black_form_title"
                android:fontFamily="@font/notosans_regular"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validate Password"
            android:textSize="14sp"
            android:textColor="@color/black_form_title"
            android:fontFamily="@font/notosans_regular"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etValidatePasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:helperText=""
            app:helperTextTextColor="@color/red_failed"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/grey_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etValidatePassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="14dp"
                android:background="@drawable/bg_et"
                android:maxLines="1"
                android:hint="Min. 8 characters"
                android:textColorHint="@color/grey_hint"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:textColor="@color/black_form_title"
                android:fontFamily="@font/notosans_regular"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bg_btn"
            android:text="Submit"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/notosans_regular"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>