<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    tools:context=".profile.ProfileFragment"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingTop="53dp"
                android:paddingBottom="15dp"
                android:paddingHorizontal="24dp"
                android:background="@color/green_primary">

                <LinearLayout
                    android:id="@+id/utilities"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="14dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chat"/>

                    <ImageView
                        android:id="@+id/btnCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cart"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/utilities">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUserProfile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/img_profile_white"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgUserProfile"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-3dp"
                            android:includeFontPadding="false"
                            android:text="User Name"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/notosans_medium"/>

                        <TextView
                            android:id="@+id/tvUserId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="ID 123456789"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/notosans_regular"/>

                        <TextView
                            android:id="@+id/tvUserStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="3dp"
                            android:paddingHorizontal="10dp"
                            android:includeFontPadding="false"
                            android:text="New User"
                            android:textSize="9sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/notosans_regular"
                            android:background="@drawable/bg_user_status"/>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnMyOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="24dp"
                android:paddingEnd="20dp"
                android:paddingVertical="12dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgicorder"
                    android:layout_width="21dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="8dp"
                    android:paddingTop="2dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_order"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgicorder"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="My Order"
                    android:textSize="14sp"
                    android:textColor="@color/black_form_title"
                    android:fontFamily="@font/notosans_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@+id/imgarrownext1"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="See More"
                    android:textSize="12sp"
                    android:textColor="@color/grey_link"
                    android:fontFamily="@font/notosans_regular"/>

                <ImageView
                    android:id="@+id/imgarrownext1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:paddingTop="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_next"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:gravity="center"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/btnPacked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/ic_packed"
                        app:tint="@color/grey_link"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="Packed"
                        android:textSize="11sp"
                        android:textColor="@color/grey_link"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnDelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_toEndOf="@id/btnPacked"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="26dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/ic_delivered"
                        app:tint="@color/grey_link"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="Delivered"
                        android:textSize="11sp"
                        android:textColor="@color/grey_link"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnReceived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_toEndOf="@id/btnDelivered"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="26dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/ic_received"
                        app:tint="@color/grey_link"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="Received"
                        android:textSize="11sp"
                        android:textColor="@color/grey_link"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnRated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/btnReceived"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/ic_rated"
                        app:tint="@color/grey_link"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="Rated"
                        android:textSize="11sp"
                        android:textColor="@color/grey_link"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnClothlabMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="24dp"
                android:paddingEnd="20dp"
                android:paddingVertical="12dp"
                android:background="@color/green_blur">

                <ImageView
                    android:id="@+id/imgicmember"
                    android:layout_width="21dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="8dp"
                    android:paddingTop="2dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_member"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgicmember"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="Clothlab Member"
                    android:textSize="14sp"
                    android:textColor="@color/green_primary"
                    android:fontFamily="@font/notosans_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@+id/imgarrownext2"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="Classic Member"
                    android:textSize="12sp"
                    android:textColor="@color/grey_link"
                    android:fontFamily="@font/notosans_regular"/>

                <ImageView
                    android:id="@+id/imgarrownext2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:paddingTop="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_next"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnFavorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="24dp"
                android:paddingEnd="20dp"
                android:paddingVertical="12dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgicfavorite"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginEnd="8dp"
                    android:paddingTop="2dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_favorite"
                    app:tint="@color/green_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgicfavorite"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="Favorite"
                    android:textSize="14sp"
                    android:textColor="@color/black_form_title"
                    android:fontFamily="@font/notosans_medium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:paddingTop="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_next"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnVoucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingStart="24dp"
                android:paddingEnd="20dp"
                android:paddingVertical="12dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgicvoucher"
                    android:layout_width="21dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="8dp"
                    android:paddingTop="2dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_voucher"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgicvoucher"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="Voucher"
                    android:textSize="14sp"
                    android:textColor="@color/black_form_title"
                    android:fontFamily="@font/notosans_medium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:paddingTop="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_next"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="24dp"
                android:paddingEnd="20dp"
                android:paddingVertical="12dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgicaccount"
                    android:layout_width="21dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="8dp"
                    android:paddingTop="2dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_account"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgicaccount"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="Account"
                    android:textSize="14sp"
                    android:textColor="@color/black_form_title"
                    android:fontFamily="@font/notosans_medium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:paddingTop="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_next"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="24dp"
                android:paddingEnd="20dp"
                android:paddingVertical="12dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgicsettings"
                    android:layout_width="21dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="8dp"
                    android:paddingTop="2dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_settings"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgicsettings"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="Settings"
                    android:textSize="14sp"
                    android:textColor="@color/black_form_title"
                    android:fontFamily="@font/notosans_medium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:paddingTop="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_next"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="24dp"
                android:paddingEnd="20dp"
                android:paddingVertical="12dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgicinfo"
                    android:layout_width="21dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="8dp"
                    android:paddingTop="2dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_info"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgicinfo"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="Info"
                    android:textSize="14sp"
                    android:textColor="@color/black_form_title"
                    android:fontFamily="@font/notosans_medium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:paddingTop="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_next"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnCustomerService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingStart="24dp"
                android:paddingEnd="20dp"
                android:paddingVertical="12dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgiccustomerservice"
                    android:layout_width="21dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="8dp"
                    android:paddingTop="2dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_customer_service"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgiccustomerservice"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="Customer Service"
                    android:textSize="14sp"
                    android:textColor="@color/black_form_title"
                    android:fontFamily="@font/notosans_medium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:paddingTop="2dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_next"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="80dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg_btn_signout"
                android:text="Sign Out"
                android:textSize="16sp"
                android:textColor="@color/red_failed"
                android:textStyle="bold"
                android:fontFamily="@font/notosans_regular"
                android:textAllCaps="false"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>